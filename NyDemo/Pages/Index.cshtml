@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
     <p> by - @Model.AuthorName </p>
</div>


@* Server-side Comments (they are not renderred in the browser) *@
<ul>
    @for(int i = 0; i < 5; i++) {                   //c#
        <li>Point #i</li>                          <!-- HTML -->
    }
</ul>

<ul>
    @for (int i = 0; i < 5; i++)
    {                                                        <!-- html with C# inlined -->
        <li>Point <b>#@(i + 1)</b></li>
    }
</ul>

<ul>
    @for (int i = 0; i < 5; i++)
    {
        string s = $"Point <b>{i + 1}</b>";             // C#
        <li>@s</li>                                 <!-- html with C# inlined -->
    }
</ul>

<ul>
    @for (int i = 0; i < 5; i++)
    {
        string s = $"Point <b>{i + 1}</b>";             
        <li>@Html.Raw(s)</li>                           <!-- HTML Helper to render the HTML content! -->
    }
</ul>